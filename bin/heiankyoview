#!/usr/bin/env/ python

import sys

import heiankyoview as H

if __name__ == '__main__':
	fn = sys.argv[1]
	g = H.EdgeList.read(fn)

	tp = H.TreePacking(g)	
	tp.pack()

	nodes = []
	L = H.BFS(g)
	for n in L:
		rect = g.getRect(n)
		nodes.append( (n, rect.x, rect.y, rect.w, rect.h) )

	H.p(nodes)
	output = "\n".join( ["%s,%f,%f,%f,%f" % tup for tup in nodes] )
	print(output)
